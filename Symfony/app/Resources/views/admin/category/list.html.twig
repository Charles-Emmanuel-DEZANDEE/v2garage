{% extends 'base.html.twig' %}

{% block body %}

    <div class="container jumbotron ">


        <h1>liste des categories de services</h1>


        <div class="table-responsive table-bordered">
            <table class="table ">
                <thead>
                <tr>
                    <th colspan="3">Position</th>
                    <th colspan="2">Nom</th>
                    <th colspan="2">Action</th>


                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td >{{ result.position }}   </td>
                        <td><a href="#" class="glyphicon glyphicon-upload "> </a></td>
                        <td><a href="#" class="glyphicon glyphicon-download"></a></td>

                        <td>{{ result.name }} </td>
                        <td> <a href="#" class="btn bg-primary"> Voir les services </a> </td>

                        <td> <a href="#" class="btn bg-primary "> Modifier </a> </td>
                        <td> <a href="#" class="glyphicon glyphicon-remove-sign "> Supprimer </a> </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    <div class="navigation">
        {{ knp_pagination_render(results) }}
    </div>

</div>

{% endblock %}

