{% extends 'base.html.twig' %}

{% block body %}

    <div class="container jumbotron ">


        <h1>liste des categories de services</h1>
        <div class="row entete">

            <div class="col-sm-3 espaceBoutton"><a href="{{ url('app_admin_category_add') }}" class="btn bg-primary ">
                    Nouvelle categorie </a></div>
        </div>

        <div class="table-responsive table-bordered">
            <table class="table ">
                <thead>
                <tr>
                    <th colspan="3">Position</th>
                    <th colspan="2">Nom</th>
                    <th colspan="2">Action</th>


                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td>{{ result.position }}   </td>
                        <td><a href="{{ path('app_admin_category_up', {'idCategory': result.id}) }}" class="glyphicon glyphicon-upload fa-2x"> </a></td>
                        <td><a href="{{ path('app_admin_category_down', {'idCategory': result.id}) }}" class="glyphicon glyphicon-download fa-2x"></a></td>

                        <td>{{ result.name }} </td>
                        <td><a href="{{ path('app_admin_service_list', {'idCategory': result.id}) }}" class="btn bg-warning"> Voir les services </a></td>

                        <td><a href="{{ path('app_admin_category_update', {'idCategory': result.id}) }}" class="btn bg-primary "> Modifier </a></td>
                        {#<td><a href="{{ path('app_admin_category_delete', {'idCategory': result.id}) }}" class="glyphicon glyphicon-remove-sign"> Supprimer </a></td>#}

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="navigation">
            {{ knp_pagination_render(results) }}
        </div>

    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
