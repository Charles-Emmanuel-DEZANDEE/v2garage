{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'headers.password_recovery' | trans | capitalize }}</h1>

    {% include 'inc/flash.message.html.twig' %}

    {{ form_start(form, { 'attr' : { 'novalidate' : 'novalidate' } }) }}
        <p>
            {{ form_label(form.password, 'entity.user.password' | trans | capitalize ~ ' :') }}
            {{ form_widget(form.password) }}
        </p>
        <p>
            <input type="submit" class="btn btn-primary" name="submit" value="{{ 'button.submit' | trans | capitalize }}">
        </p>
    {{ form_end(form) }}

    {{ form_errors(form.password) }}

{% endblock %}