{% extends 'base.html.twig' %}

{% block body %}
    <div class="container jumbotron">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <h1>connexion</h1>


                {% if error %}
                    <div class="alert alert-danger">La combinaison email et mot de passe est mauvaise</div>
                {% endif %}

                <form action="{{ url('app_security_login') }}" method="post">
                    <p class="form-group">
                        <label class="col-sm-4" for="username">email</label>
                        <input type="text" id="username" name="_username" value="" class="form-control col-sm-8" />
                    </p>

                    <p class="form-group">
                        <label class="col-sm-4" for="password">Mot de passe</label>
                        <input type="password" id="password" name="_password" class="form-control col-sm-8" />
                    </p>

                    <p class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="valider" />
                    </p>
                </form>

                <p><a href="{{ url('app_account_password_forgotten') }}">Mot de passe oubli√©</a></p>

            </div>
            <div class="col-sm-3"></div>

        </div>

    </div>

{% endblock %}